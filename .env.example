# Application
NODE_ENV=development
PORT=3000
# Comma-separated list of allowed origins (no wildcard in production!)
CORS_ORIGIN=http://localhost:3001,http://localhost:4200,http://localhost:5173

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres
DB_POOL_SIZE=10
DB_POOL_MIN_SIZE=5
DB_IDLE_TIMEOUT=600000
DB_CONNECTION_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=60000

# JWT Authentication
JWT_SECRET=your-secret-key-here
JWT_ISSUER=easybaby-api
JWT_AUDIENCE=easybaby-api
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
# expiration in seconds
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=2592000

# Email Service (Brevo)
BREVO_API_KEY=your-brevo-api-key
DEFAULT_SENDER_EMAIL=noreply@yourdomain.com
DEFAULT_SENDER_NAME=Your App Name
CONTACT_EMAIL=contact@yourdomain.com

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Security
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
# Global rate limiting (60 requests per minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=60
# Sensitive endpoints rate limiting (3 requests per hour)
SENSITIVE_THROTTLE_TTL=3600000
SENSITIVE_THROTTLE_LIMIT=3
